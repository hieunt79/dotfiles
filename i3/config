# set modifier
set $super Mod4
set $alt Mod1
set $ctrl Mod3

# set font
#font pango:Ionicons 9, Poppins Regular 9
#font pango:Monaco 11, CamigoCode 9
font pango:Monaco 11, Monaco 9

# use mouse+$super to drag floating windows to their wanted position
floating_modifier $super

# autostart
# install: sudo apt install hsetroot
#exec --no-startup-id hsetroot -center ~/.wallpaper.png

# Install: sudo apt install polybar
exec_always --no-startup-id ~/.config/polybar/launch.sh --grayblocks
# exec_always --no-startup-id ~/.config/polybar/launch.sh --docky

# Install: sudo apt install feh imagemagick -y
exec_always --no-startup-id ~/.config/i3/background.sh

#exec_always picom --config ~/.config/picom/picom.conf --experimental-backend
# Install: sudo apt install picom dunst -y
#exec_always killall picom
exec_always picom --config ~/.config/picom/picom.conf
#exec_always killall dunst

# start a terminal
bindsym $super+t exec i3-sensible-terminal
bindsym $super+Return exec alacritty

# start dmenu (a program launcher)
# bindsym $super+d exec i3-dmenu-desktop --dmenu="dmenu -i -b \
#-fn 'Poppins:size=9' -nb '#141c21' -nf '#93a1a1' \
#-sb '#289c93' -sf '#141c21'"

# Install: sudo apt install rofi -y
bindsym $super+d exec rofi -theme ~/.config/rofi/themes/rounded-gray-dark-gh-themes-collection.theme -show drun

# common apps keybinds
bindsym Print exec scrot 'Cheese_%a-%d%b%y_%H.%M.png' -e 'xdg-open ~/$f'
# Install: sudo apt install i3lock -y
#bindsym $super+k exec i3lock --no-unlock-indicator -t -i $HOME/.config/i3/lockscreen.png
bindsym $super+k exec i3lock --no-unlock-indicator -t -i ~/.config/i3/lockscreen.png
#bindsym $super+l exec i3lock#-fancy
bindsym $super+w exec firefox
#bindsym $super+e exec thunar

# bindsym $super+n exec dunstctl close

bindsym $super+Tab exec "rofi -show window"
bindsym Control+Tab workspace back_and_forth

# change volume and brightness
# alsa_output.pci-0000_00_1f.3.hdmi-stereo
bindsym $super+equal exec "pactl set-sink-volume alsa_output.pci-0000_00_1f.3.analog-stereo +5%"
bindsym $super+minus exec "pactl set-sink-volume alsa_output.pci-0000_00_1f.3.analog-stereo -5%"
#bindsym $super+equal exec "pactl set-sink-volume alsa_output.hw_0_7 +5%"
#bindsym $super+minus exec "pactl set-sink-volume alsa_output.hw_0_7 -5%"

#bindsym XF86AudioRaiseVolume exec amixer -q set Master 5%+
#bindsym XF86AudioLowerVolume exec amixer -q set Master 5%-
#bindsym XF86AudioMute exec amixer set Master toggle
#bindsym XF86MonBrightnessUp exec brightnessctl set 5%+
#bindsym XF86MonBrightnessDown exec brightnessctl set 5%-

# kill focused window
bindsym $super+c kill
bindsym $alt+F4 kill

# change focus
bindsym $super+Left focus left
bindsym $super+Down focus down
bindsym $super+Up focus up
bindsym $super+Right focus right

# move focused window
bindsym $super+Shift+Left move left
bindsym $super+Shift+Down move down
bindsym $super+Shift+Up move up
bindsym $super+Shift+Right move right

# split in horizontal or vertical orientation
bindsym $super+h split h
bindsym $super+v split v

# change split direction for already opened windows
bindsym $super+s layout toggle split

# enter fullscreen mode for the focused container
bindsym $super+f fullscreen toggle

# toggle tiling / floating
bindsym $super+space floating toggle

# change focus between tiling / floating windows
bindsym $super+Shift+space focus mode_toggle

# move workspace to other monitor
# REF: https://www.reddit.com/r/i3wm/comments/12jocl9/comment/jfzsqsc
bindsym $super+Control+Shift+Right move workspace to output right
bindsym $super+Control+Shift+Left move workspace to output left

# switch to workspace
bindsym $super+Control+Right workspace next
bindsym $super+Control+Left workspace prev
bindsym $super+1 workspace 1
bindsym $super+2 workspace 2
bindsym $super+3 workspace 3
bindsym $super+4 workspace 4
bindsym $super+5 workspace 5
bindsym $super+6 workspace 6
bindsym $super+7 workspace 7
bindsym $super+8 workspace 8
bindsym $super+9 workspace 9
bindsym $super+0 workspace 0

# move focused container to workspace
bindsym $super+Shift+1 move container to workspace 1
bindsym $super+Shift+2 move container to workspace 2
bindsym $super+Shift+3 move container to workspace 3
bindsym $super+Shift+4 move container to workspace 4
bindsym $super+Shift+5 move container to workspace 5
bindsym $super+Shift+6 move container to workspace 6
bindsym $super+Shift+7 move container to workspace 7
bindsym $super+Shift+8 move container to workspace 8
bindsym $super+Shift+9 move container to workspace 9
bindsym $super+Shift+0 move container to workspace 0

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $super+BackSpace exec "i3-msg restart"

# exit i3
bindsym $super+q exec "i3-nagbar -t warning -m 'Really, exit?' \
-b 'Yes' 'i3-msg exit'"

bindsym $super+Delete exec "flameshot launcher"

# resize window (you can also use the mouse for that)
mode "resize" {
	bindsym Left resize shrink width 5 px or 5 ppt
	bindsym Down resize grow height 5 px or 5 ppt
	bindsym Up resize shrink height 5 px or 5 ppt
	bindsym Right resize grow width 5 px or 5 ppt
	bindsym Return mode "default"
	}
bindsym $super+r mode "resize"

new_window pixel 3
new_float pixel 3

